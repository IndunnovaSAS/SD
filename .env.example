# =============================================================================
# SD LMS - Environment Variables Example
# Copy this file to .env and update values
# =============================================================================

# -----------------------------------------------------------------------------
# Django Settings
# -----------------------------------------------------------------------------
DJANGO_SETTINGS_MODULE=config.settings.local
SECRET_KEY=your-super-secret-key-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# -----------------------------------------------------------------------------
# Database (Docker Compose)
# -----------------------------------------------------------------------------
# IMPORTANT: Set POSTGRES_PASSWORD for Docker Compose (required)
POSTGRES_PASSWORD=change-this-secure-password
POSTGRES_USER=postgres
POSTGRES_DB=sd_lms

# DATABASE_URL for application connection
# For Docker Compose (uses service name 'db'):
DATABASE_URL=postgres://postgres:change-this-secure-password@db:5432/sd_lms
# For local development without Docker:
# DATABASE_URL=postgres://postgres:your-password@localhost:5432/sd_lms

# Or individual settings:
# DB_NAME=sd_lms
# DB_USER=postgres
# DB_PASSWORD=your-password
# DB_HOST=localhost
# DB_PORT=5432
DB_CONN_MAX_AGE=60

# -----------------------------------------------------------------------------
# Redis
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379/0
# Or individual settings:
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_DB=0

# -----------------------------------------------------------------------------
# Email
# -----------------------------------------------------------------------------
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# For production:
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.example.com
# EMAIL_PORT=587
# EMAIL_HOST_USER=your-email@example.com
# EMAIL_HOST_PASSWORD=your-email-password
# EMAIL_USE_TLS=True
# DEFAULT_FROM_EMAIL=noreply@example.com

# For local development with MailHog:
# EMAIL_HOST=mailhog
# EMAIL_PORT=1025

# SendGrid (Production)
# SENDGRID_API_KEY=your-sendgrid-api-key

# -----------------------------------------------------------------------------
# AWS / GCP Storage (Production)
# -----------------------------------------------------------------------------
# USE_S3=False
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_STORAGE_BUCKET_NAME=
# AWS_S3_REGION_NAME=

# GCP Storage
# GS_BUCKET_NAME=your-bucket-name
# GS_PROJECT_ID=your-gcp-project-id
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json

# -----------------------------------------------------------------------------
# Sentry (Error Tracking)
# -----------------------------------------------------------------------------
# SENTRY_DSN=https://your-sentry-dsn

# -----------------------------------------------------------------------------
# Security
# -----------------------------------------------------------------------------
# CSRF_TRUSTED_ORIGINS=https://yourdomain.com
# CORS_ALLOWED_ORIGINS=https://yourdomain.com

# -----------------------------------------------------------------------------
# Celery
# -----------------------------------------------------------------------------
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# JWT Settings
# -----------------------------------------------------------------------------
# JWT_ACCESS_TOKEN_LIFETIME=60  # minutes
# JWT_REFRESH_TOKEN_LIFETIME=1440  # minutes (1 day)

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
SITE_NAME=SD LMS
SITE_URL=http://localhost:8000
ADMIN_EMAIL=admin@example.com

# -----------------------------------------------------------------------------
# Third-party API Keys
# -----------------------------------------------------------------------------
# TWILIO_ACCOUNT_SID=
# TWILIO_AUTH_TOKEN=
# TWILIO_PHONE_NUMBER=

# Push notifications (VAPID)
# VAPID_PUBLIC_KEY=
# VAPID_PRIVATE_KEY=
# VAPID_ADMIN_EMAIL=
